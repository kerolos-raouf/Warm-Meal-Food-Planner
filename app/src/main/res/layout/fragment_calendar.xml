            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarWednesdayDivider" />




        <TextView
            android:id="@+id/calendarThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto"
            android:text="@string/thursday"
            android:textColor="@color/dark_gray"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarWednesdayRecyclerView" />

        <Button
            android:id="@+id/calendarThursdayAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normalMargin"
            android:layout_marginEnd="@dimen/smallMargin"
            android:background="@drawable/sign_up_button_background"
            android:text="@string/add"
            app:backgroundTint="@color/dark_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarWednesdayRecyclerView"
            android:visibility="invisible"
            />

        <View
            android:id="@+id/calendarThursdayDivider"
