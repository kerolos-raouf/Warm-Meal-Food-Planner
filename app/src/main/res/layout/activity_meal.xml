<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meal_screen.view.MealActivity"

    android:background="@color/light_gray"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mealScreenImage"
            android:layout_width="0dp"
            android:layout_height="350dp"

            android:src="@drawable/login_ways"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/mealScreenDetailsCard"
            android:layout_width="0dp"
            android:layout_height="150dp"

            android:layout_marginTop="270dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="@color/dark_gray"
            android:elevation="10dp"
            app:cardCornerRadius="50dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/mealScreenMealName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meal Name"
                android:gravity="center"
                android:textSize="25sp"
                android:lines="2"
                android:textColor="@color/light_sugar"
                android:fontFamily="@font/roboto_medium"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/mealScreenMealCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country Name"
                android:gravity="center"
                android:textSize="25sp"
                android:lines="2"
                android:textColor="@color/light_sugar"
                android:fontFamily="@font/roboto_medium"
                android:padding="10dp"
                android:layout_gravity="bottom"
                />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/mealScreenMealInstructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Insturctions : this is the way to eat the meal in the app "
            android:textSize="23sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_regular_italic"
            android:padding="20dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mealScreenDetailsCard" />

        <TextView
            android:id="@+id/mealScreenIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:padding="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mealScreenMealInstructions" />

        <TextView
            android:id="@+id/mealScreenAmounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:padding="20dp"
            android:text="Amounts"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:layout_marginEnd="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mealScreenMealInstructions" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mealScreenRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/mealScreenIngredients" />

        <androidx.cardview.widget.CardView
            android:id="@+id/mealScreenCardView"
            android:layout_width="0dp"
            android:layout_height="250dp"

            android:backgroundTint="@color/dark_gray"
            android:elevation="10dp"
            app:cardCornerRadius="50dp"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mealScreenRecyclerView"
             >

            <VideoView
                android:id="@+id/mealScreenVideoViewer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_gray"
                />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/stackViewMealAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="ADD TO FAVOURITE"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/roboto"
            app:backgroundTint="@color/light_sugar"
            android:background="@drawable/cutom_button"
            app:layout_constraintTop_toBottomOf="@id/mealScreenCardView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>