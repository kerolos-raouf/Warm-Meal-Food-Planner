<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_ways.view.LoginWays">

    <Button
        android:id="@+id/loginWaysSkip"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/skip"
        android:textColor="@color/white"
        android:background="@drawable/transparent_button"
        app:backgroundTint="@color/transparent_black"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/loginWaysBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_ways"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/foreground_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/loginWaysName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/warm_meal"
        android:textColor="@color/white"
        android:textSize="100sp"
        android:fontFamily="@font/inspiration_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageButton
        android:id="@+id/loginWaysGmail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/normalMargin"
        android:layout_marginStart="@dimen/normalMargin"
        android:layout_marginTop="50dp"
        android:background="@drawable/sign_up_button_background"
        android:contentDescription="@string/gmail_login"
        android:src="@drawable/gmail_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginWaysName" />



    <Button
        android:id="@+id/loginWaysSignUp"
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:background="@drawable/sign_up_button_background"
        app:backgroundTint="@color/white"
        android:text="@string/sign_up_with_new_email"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="@dimen/normalMargin"
        android:layout_marginEnd="@dimen/normalMargin"
        android:layout_marginStart="@dimen/normalMargin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginWaysGmail" />

    <TextView
        android:id="@+id/alreadyHaveAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_have_an_account"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_normal"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginWaysSignUp" />

    <TextView
        android:id="@+id/loginWaysLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="@string/log_in_underLine"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@+id/alreadyHaveAnAccount"
        app:layout_constraintTop_toBottomOf="@+id/loginWaysSignUp" />

</androidx.constraintlayout.widget.ConstraintLayout>