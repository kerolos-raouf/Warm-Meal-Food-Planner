<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="30dp"
    app:cardCornerRadius="50dp"
    android:elevation="10dp"
    android:backgroundTint="@color/dark_gray"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/stackViewMealImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/login_ways"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stackViewMealName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Meal Name"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_normal"
            android:textSize="20sp"
            android:lines="4"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stackViewMealImage" />

        <Button
            android:id="@+id/stackViewMealAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="ADD TO FAVOURITE"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/roboto"
            app:backgroundTint="@color/light_sugar"
            android:background="@drawable/cutom_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.cardview.widget.CardView>